<div>
  <h2>Login</h2>

  <%= form_with model: @user, url: login_path, method: :post do |f| %>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.submit "Login" %>
    </div>
  <% end %>
</div>
