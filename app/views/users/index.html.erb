<div class="Users">
  <div class="Users-list" data-controller="users" data-users-current_user_id=<%= current_user.id %>>
    <% @users.each do |user| %>
      <button
        class="Users-user Users-user--<%= user.status %>"
        data-user_id="<%= user.id %>"
        data-reflex="click->UserReflex#toggle_status"
      >
        <span><%= user.username %></span>

        <div class="Users-userStatus">
          <% unless user.unavailable? %>
            <%= t(user.status) %>
          <% end %>
        </div>
      </button>
    <% end %>
  </div>

  <div class="Users-statuses">
    <h2><%= t("available") %></h2>

    <% @available_users.each do |user| %>
      <p><%= user.username %></p>
    <% end %>

    <h2><%= t("service") %></h2>

    <% @service_users.each do |user| %>
      <p><%= user.username %></p>
    <% end %>
  </div>
</div>
