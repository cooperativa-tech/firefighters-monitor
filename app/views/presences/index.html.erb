<div class="Presences">
  <div class="Presences-list" data-controller="presences" data-presences-current_user_id=<%= current_user.id %>>
    <% @users.each do |user| %>
      <button
        class="Presences-user Presences-user--<%= user.status %>"
        data-user_id="<%= user.id %>"
        data-action="click->presences#toggleStatus contextmenu->presences#toggleDutyType"
      >
        <span><%= user.username %></span>

        <% if user.duty_type.present? %>
          <div class="Presences-userDutyType">
            <%= t("users.#{user.duty_type}") %>
          </div>
        <% end %>

        <div class="Presences-userStatus">
          <% unless user.unavailable? %>
            <%= t("users.#{user.status}") %>
          <% end %>
        </div>
      </button>
    <% end %>
  </div>

  <div class="Presences-statuses">
    <h2><%= t("users.available") %></h2>

    <% @available_users.each do |user| %>
      <p><%= user.username %></p>
    <% end %>

    <h2><%= t("users.service") %></h2>

    <% @service_users.each do |user| %>
      <p><%= user.username %></p>
    <% end %>

    <h2><%= t("users.picket") %></h2>

    <% @picket_users.each do |user| %>
      <p><%= user.username %></p>
    <% end %>

    <h2><%= t("users.elac") %></h2>

    <% @elac_users.each do |user| %>
      <p><%= user.username %></p>
    <% end %>

    <h2><%= t("users.eip") %></h2>

    <% @eip_users.each do |user| %>
      <p><%= user.username %></p>
    <% end %>
  </div>
</div>
